<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/fundo_color"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="147dp"
            android:layout_height="150dp"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="@+id/aguardeTextView"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="@+id/aguardeTextView"
            app:layout_constraintTop_toBottomOf="@+id/aguardeTextView" />

        <TextView
            android:id="@+id/aguardeTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:text="@string/carregando"
            android:textColor="@color/white"
            android:textSize="@dimen/bemvindoFont"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>