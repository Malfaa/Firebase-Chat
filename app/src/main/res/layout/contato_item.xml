<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.malfaa.firebasechat.viewmodel.ContatosViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contatoItem"
        android:onClick="@{() -> viewModel.irAteConversa()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- navegar atÃ© o item clicado || colocar mais info a
         respeito da ultima mensagem enviada na conversa -->

        <TextView
            android:id="@+id/ContatoItemNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.irAteConversa()}"
            android:layout_marginStart="@dimen/conversa_item_dimen"
            android:layout_marginTop="@dimen/conversa_item_dimen"
            android:layout_marginEnd="@dimen/conversa_item_dimen"
            android:layout_marginBottom="@dimen/conversa_item_dimen"
            android:hint="@string/nomeConversa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>