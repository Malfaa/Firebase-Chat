<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/area_edittext">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/area_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/v_logo" />

            <TextView
                android:id="@+id/fc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_mono_light_italic"
                android:text="@string/fc"
                android:textAppearance="@style/fc" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/esq_c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/raio_cantos_btn"
            android:backgroundTint="@color/logo_fundo_color"
            app:cardCornerRadius="@dimen/main_de_elementos_layout"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/esq_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/raio_cantos_btn"
            android:layout_marginTop="@dimen/main_de_elementos_layout"
            android:backgroundTint="@color/logo_fundo_color_t"
            app:cardCornerRadius="@dimen/main_de_elementos_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/esq_c" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dir_c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/raio_cantos_btn"
            android:layout_marginTop="@dimen/raio_cantos_btn"
            android:layout_marginBottom="@dimen/raio_cantos_btn"
            android:backgroundTint="@color/logo_fundo_color_d"
            app:cardCornerRadius="@dimen/main_de_elementos_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/dir_b" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dir_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/raio_cantos_btn"
            android:backgroundTint="@color/logo_fundo_color_t"
            app:cardCornerRadius="@dimen/main_de_elementos_layout"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cima_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/raio_cantos_btn"
            android:layout_marginTop="@dimen/raio_cantos_btn"
            android:backgroundTint="@color/logo_fundo_color_d"
            app:cardCornerRadius="@dimen/main_de_elementos_layout"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/baixo_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/logo_fundo_color"
            android:layout_marginTop="@dimen/raio_cantos_btn"
            app:cardCornerRadius="@dimen/main_de_elementos_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>